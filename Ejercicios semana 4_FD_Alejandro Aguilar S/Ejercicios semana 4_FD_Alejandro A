# Ejercicio 1 con while
print("Ejercicio 1 con while")

# Inicializamos una variable contador
contador_numero = 1

# Mientras contador sea menor o igual a 5
while contador_numero <= 5:
    print(f"NÃºmero: {contador_numero}")
    contador_numero = contador_numero + 1 # Incrementamos el contador

# Ejercicio 2 con while - cuenta regresiva
print("\nEjercicio 2 con while - cuenta regresiva")
# Inicializamos el contador en 5
numero = 5

# Mientras el nÃºmero sea mayor que 0
while numero > 0:
    print(f"Faltan {numero} segundos...")
    numero = numero - 1 # Decrementamos el contador

print("ðŸš€ Â¡Despegue!")

# Ejercicio 3 con while - suma acumulativa
print("\nEjercicio 3 con while - suma acumulativa")
# Inicializamos las variables
numeros = 1
suma = 0

# Mientras numeros sea menor o igual a 50
while numeros <= 50:
    suma = suma + numeros #Acumulamos la suma
    numeros = numeros + 1 # Incrementamos el contador

print(f"La suma del 1 al 50 es: {suma}\n")

# Ejercicio 4 - Tabla de multiplicar
print("\nEjercicio 4 - Tabla de Multiplicar")
# Inicializamos el contador
multiplicador = 1

# Mientras el multiplicador sea menor o igual a 10
while multiplicador <= 10:
    resultado = 7 * multiplicador
    print(f"7 x {multiplicador} = {resultado}")
    multiplicador = multiplicador + 1

print("Â¡Tabla completa! \n")

# Ejercicio 5 - NÃºmeros pares del 2 al 50
print("\nEjercicio 5 - NÃºmeros apres del 2 al 50")

# Inicializamos el contador en 2 (primer par)
numeros_pares = 2

# Mientras el numero sea menor o igual a 50
while numeros_pares <= 50:
    print(f"NÃºmero par: {numeros_pares}")
    numeros_pares = numeros_pares + 2 # Incrementamos de 2 en 2

print("Â¡Todos los pares mostrados\n")

# Ejercicio 6 - Dividir un nÃºmero a la mitad
print("\nEjercicio 6 - Dividir un nÃºmero a la mitad")
# Inicializamos con un nÃºmero
numero_a_dividir = 100

# Mientras el nÃºmero sea mayor o igual a 1
while numero_a_dividir >= 1:
    print(f"NÃºmero actual: {numero_a_dividir}")
    numero_a_dividir = numero_a_dividir / 2 # Dividimos entre 2

print(f"NÃºmero final (menor a 1): {numero_a_dividir}")

# Ejercicio 7 - Loop infinito
print("\nEjercicio 7 - Loop infinito")
# Queremos contar del 1 al 5
contador = 1

while contador <= 5:
    print(f"NÃºmero: {contador}")

print("AquÃ­ terminan los ejercicios de while")

# Ejercicio 8 - Loop corregido
print("\nEjercicio 8 - Loop corregido")
# Queremos contar del 1 al 5
contador = 1

while contador <= 5:
    print(f"NÃºmero: {contador}")
    contador = contador + 1 # âœ… Â¡Ahora si incrementamos!

print("Â¡Loop terminado correctamente!\n")
