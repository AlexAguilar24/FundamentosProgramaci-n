# Ejercicio 1: Tabla de multiplicar
print("\nEjercicio 1: Tabla de multiplicar")

numero = 5
for i in range (1, 11):
    resultado = numero * i
    print(f"{numero} x {i} = {resultado}")

# Ejercicio 2: SUmar números
print("\nEjercicio 2")
numeros = [10, 20, 30, 40, 50]
suma = 0
for num in numeros:
    suma += num
print(f"La suma total es: {suma}")

# Ejercicio 3: Contar vocales
print("\nEjercicio 3")
texto = "Que rollo, que hace la raza el miercoles"
contador = 0
for letra in texto:
    if letra.lower() in "aeiou":
        contador += 1
print(f"Hay {contador} vocales")

# Ejercicio 4 : Encontrar el número mayor
print("\nEjercicio 4")

numeros = [15, 42, 8, 23, 67, 31]
mayor = numeros[0] #Empezamos con el primero de la lista
for num in numeros:
    if num > mayor:
        mayor = num
print(f"El numero mayor es: {mayor}")

# Ejercicio 5: Crear una lista de cuadrados
print("\nEjercicio 5")

cuadrados = []
for j in range(1,6):
    cuadrados.append(j ** 2)
print(cuadrados)

